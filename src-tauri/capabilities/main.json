{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "updater:allow-check",
    "updater:allow-download-and-install",
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "name": "adb",
          "cmd": "adb",
          "sidecar": false,
          "args": true
        }
      ]
    },

    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "adb",
          "cmd": "adb",
          "sidecar": false,
          "args": true
        }
      ]
    },

    {
      "identifier": "shell:allow-kill",
      "allow": [
        {
          "name": "adb",
          "cmd": "adb",
          "sidecar": false,
          "args": true
        }
      ]
    },

    {
      "identifier": "shell:allow-stdin-write",
      "allow": [
        {
          "name": "adb",
          "cmd": "adb",
          "sidecar": false,
          "args": true
        }
      ]
    }
  ]
}
