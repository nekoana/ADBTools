{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ADBTools",
  "version": "1.0.2",
  "identifier": "com.kouqurong.adbtools",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "adbtools v1.0.2",
        "width": 1080,
        "height": 600,
        "minWidth": 1080,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "maximizable": false,
        "center": true,
        "shadow": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
        "endpoints": ["https://github.com/nekoana/ADBTools/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBRkJFRjZEQkRFNEIzREEKUldUYXMrUzliZS83cW84czY2QURBeHRjS0N1cWN1cVEvNkZxWUIrNDVUMnRrT1NZWHZ0UThBVXMK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
